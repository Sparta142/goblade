{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "goreleaser: snapshot",
            "type": "process",
            "command": "goreleaser",
            "args": [
                "release",
                "--rm-dist",
                "--snapshot"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
