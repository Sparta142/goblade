{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "goreleaser: release (skip publish)",
            "type": "process",
            "command": "goreleaser",
            "args": [
                "release",
                "--skip-publish",
                "--rm-dist",
                "--auto-snapshot"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
